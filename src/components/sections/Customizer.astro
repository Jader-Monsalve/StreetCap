---
import CapViewer3D from '../CapViewer3D.astro';

const colorOptions = [
  { name: 'Blanco', value: '#FFFFFF' },
  { name: 'Negro', value: '#000000' },
  { name: 'Rojo', value: '#EF4444' },
  { name: 'Azul', value: '#3B82F6' },
  { name: 'Verde', value: '#10B981' },
  { name: 'Amarillo', value: '#FBBF24' },
  { name: 'P√∫rpura', value: '#A855F7' },
  { name: 'Rosa', value: '#EC4899' },
];

const capParts = [
  { label: 'Parte frontal', icon: 'üé®' },
  { label: 'Visera', icon: 'üëÅÔ∏è' },
  { label: 'Malla', icon: 'üî≤' },
  { label: 'Bot√≥n', icon: 'üîò' },
];
---

<section class="relative w-full py-20 bg-black overflow-hidden">
  {/* Background */}
  <div class="absolute top-0 right-0 w-96 h-96 bg-purple-500/5 rounded-full blur-3xl"></div>

  <div class="relative z-10 max-w-7xl mx-auto px-6">
    {/* Header */}
    <div class="mb-16 space-y-4">
      <h2 class="text-5xl md:text-6xl font-black text-white">
        Personaliza tu gorra
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl">
        Dale tu toque personal: elige colores, texturas, agrega textos y logos.
      </p>
    </div>

    {/* Main layout - Sidebar + Preview */}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {/* Sidebar - Customization Options */}
      <div class="lg:col-span-1 space-y-6">
        {/* Color Selector for Cap Parts */}
        <div class="bg-gradient-to-br from-gray-900/50 to-black border border-cyan-500/20 rounded-2xl p-6 space-y-4">
          <h3 class="text-xl font-bold text-white flex items-center gap-2">
            üé® Colores
          </h3>

          {capParts.map((part) => (
            <div class="space-y-3">
              <label class="text-sm font-medium text-gray-300 flex items-center gap-2">
                <span class="text-lg">{part.icon}</span>
                {part.label}
              </label>
              <div class="grid grid-cols-4 gap-2">
                {colorOptions.map((color) => (
                  <button
                    class="w-full aspect-square rounded-lg border-2 border-gray-700 hover:border-cyan-400 transition cursor-pointer group cap-color-btn"
                    style={{ backgroundColor: color.value }}
                    data-color={color.value}
                    data-part={part.label.toLowerCase()}
                    onclick={`changeCapColor('${color.value}', '${part.label.toLowerCase()}')`}
                    title={color.name}
                  >
                    <div class="w-full h-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition">
                      <span class="text-white text-xs font-bold drop-shadow">‚úì</span>
                    </div>
                  </button>
                ))}
              </div>
            </div>
          ))}
        </div>

        {/* Text/Logo Options */}
        <div class="bg-gradient-to-br from-gray-900/50 to-black border border-cyan-500/20 rounded-2xl p-6 space-y-4">
          <h3 class="text-xl font-bold text-white flex items-center gap-2">
            ‚úèÔ∏è Texto & Logo
          </h3>

          <div class="space-y-2">
            <label class="text-sm font-medium text-gray-300">Tu nombre o texto</label>
            <input
              type="text"
              placeholder="Escribe aqu√≠..."
              class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:border-cyan-500 focus:outline-none transition"
            />
          </div>

          <div class="space-y-2">
            <label class="text-sm font-medium text-gray-300">Tipograf√≠a</label>
            <select class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-lg text-white focus:border-cyan-500 focus:outline-none transition">
              <option>Cl√°sica</option>
              <option>Moderna</option>
              <option>Graffiti</option>
              <option>Script</option>
            </select>
          </div>

          <div class="space-y-2">
            <label class="text-sm font-medium text-gray-300">Logo o √≠cono</label>
            <div class="flex gap-2 flex-wrap">
              {['üéµ', '‚öΩ', 'üåü', '‚ù§Ô∏è', 'üî•', 'üëΩ', 'üíÄ', 'üé®'].map((emoji) => (
                <button
                  class="w-10 h-10 rounded-lg bg-gray-800 hover:bg-cyan-500/20 border border-gray-700 hover:border-cyan-500 transition flex items-center justify-center text-lg cursor-pointer"
                >
                  {emoji}
                </button>
              ))}
            </div>
          </div>
        </div>

        {/* Extras */}
        <div class="bg-gradient-to-br from-gray-900/50 to-black border border-cyan-500/20 rounded-2xl p-6 space-y-4">
          <h3 class="text-xl font-bold text-white flex items-center gap-2">
            ‚≠ê Extras
          </h3>

          <label class="flex items-center gap-3 cursor-pointer">
            <input type="checkbox" class="w-4 h-4 rounded" />
            <span class="text-sm text-gray-300">Efecto sombra</span>
          </label>

          <label class="flex items-center gap-3 cursor-pointer">
            <input type="checkbox" class="w-4 h-4 rounded" />
            <span class="text-sm text-gray-300">Luz ambiental</span>
          </label>

          <label class="flex items-center gap-3 cursor-pointer">
            <input type="checkbox" class="w-4 h-4 rounded" />
            <span class="text-sm text-gray-300">Textura tipo tela</span>
          </label>
        </div>
      </div>

      {/* Preview Area */}
      <div class="lg:col-span-2">
        <div class="sticky top-24 space-y-6">
          {/* 3D Preview */}
          <div style="width: 100%; height: 400px;" class="bg-gradient-to-br from-gray-900/50 to-black border border-cyan-500/20 rounded-2xl overflow-hidden">
            <CapViewer3D capType="baseball" />
          </div>

          {/* Action Buttons */}
          <div class="flex gap-4">
            <button class="flex-1 px-6 py-4 bg-gradient-to-r from-cyan-500 to-blue-600 text-white font-bold rounded-lg hover:shadow-lg hover:shadow-cyan-500/50 transition transform hover:scale-105" onclick="toggleAutoRotate()">
              ‚Üª Rotar
            </button>
            <button class="flex-1 px-6 py-4 border border-cyan-500/50 text-cyan-400 font-bold rounded-lg hover:bg-cyan-500/10 transition" onclick="resetView()">
              üîÑ Reiniciar
            </button>
          </div>

          {/* Download/Share */}
          <div class="flex gap-4">
            <button class="flex-1 px-6 py-4 bg-green-600/80 hover:bg-green-600 text-white font-bold rounded-lg transition" onclick="downloadDesign()">
              ‚¨áÔ∏è Descargar
            </button>
            <button class="flex-1 px-6 py-4 bg-blue-600/80 hover:bg-blue-600 text-white font-bold rounded-lg transition" onclick="shareDesign()">
              üì§ Compartir
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function changeCapColor(color: string, part: string) {
    const window_obj = window as any;
    
    switch(part) {
      case 'parte frontal':
        if (window_obj.changeCapColor) window_obj.changeCapColor(color);
        break;
      case 'visera':
        if (window_obj.changeVisorColor) window_obj.changeVisorColor(color);
        break;
      case 'malla':
        if (window_obj.changeBandColor) window_obj.changeBandColor(color);
        break;
      case 'bot√≥n':
        if (window_obj.changeButtonColor) window_obj.changeButtonColor(color);
        break;
    }
  }
</script>
