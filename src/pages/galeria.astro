---
import Layout from '../layouts/Layout.astro';
import Gallery from '../components/sections/Gallery.astro';
---

<Layout>
  <section class="pt-32 pb-20 bg-black min-h-screen">
    <div class="max-w-7xl mx-auto px-6">
      <h1 class="text-6xl font-black text-white mb-4">
        Galería Completa
      </h1>
      <p class="text-gray-400 text-lg mb-12 max-w-2xl">
        Descubre las mejores creaciones de la comunidad. Inspírate y crea tu propio diseño.
      </p>
    </div>
  </section>

  <Gallery />
</Layout>
